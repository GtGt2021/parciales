			case 1:
				if (loadSalon(eSalones, SALONES_LEN)==0)
				{
					printPosition(&eSalones[])
				}
				break;
			case 2:

				break;
			case 3:

				break;

			default:

				break;
		}


	}while(menu!=0);





	return EXIT_SUCCESS;
}
